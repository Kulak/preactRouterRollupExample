{
  "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "allowJs": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        // The following imports no longer necessary
        // due to moduleResolution: "node"
          // "grpc-web": ["node_modules/grpc-web/index.d.ts"],
          // "htm/preact": ["node_modules/htm/preact/index.d.ts"],
          // "preact": ["node_modules/preact/src/index.d.ts"]
      },
      "outDir": "out",
      // node resolution mode allows VSCode to find 
      // nested imports and imports in node_modules
      "moduleResolution": "node",
      "esModuleInterop": true
    },
  "include": ["src/**/*.ts"]
}
